doctype html
head
    title Akshat Trivedi&apos;s Blog | #{title}
    include _head
    if article
        meta(property='og:url' content=`https://akshattrivedi.herokuapp.com/article/${article.slug}`)
        meta(property='og:type' content='website')
        meta(property='og:title' content=`${title}`)
        meta(property='og:description' content=`${article.introduction}`)
        meta(property='og:image' content=`https://akshattrivedi.herokuapp.com/images/${article.coverImage}.jpg`)
    else
        meta(property='og:url' content=`https://akshattrivedi.herokuapp.com/`)
        meta(property='og:type' content='website')
        meta(property='og:title' content=`Akhsat Trivedi's blog`)
        meta(property='og:description' content='A website which provides information on web development')
        meta(property='og:image' content=`https://akshattrivedi.herokuapp.com/images/banner.jpg`)
body
    //header
    include _header

    //content
    block content
        h1 This is a placeholder

    //footer
    include _footer

    script(src="/js/bundle.js")
    
